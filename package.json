{
  "name": "graphql-ts-boilerplate",
  "version": "0.0.1",
  "description": "Awesome project developed with TypeORM.",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.1",
    "@types/jest": "^23.3.0",
    "@types/node": "^10.5.2",
    "gql2ts": "^1.8.0",
    "jest": "^23.4.1",
    "nodemon": "^1.18.2",
    "ts-jest": "^23.0.0",
    "ts-node": "7.0.0",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.13.0",
    "typescript": "2.9.2"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "graphql": "^0.13.2",
    "graphql-import": "^0.6.0",
    "graphql-request": "^1.6.0",
    "graphql-tools": "^3.0.5",
    "graphql-yoga": "^1.14.12",
    "pg": "^7.3.0",
    "reflect-metadata": "^0.1.10",
    "typeorm": "0.2.7"
  },
  "scripts": {
    "start": "SET NODE_ENV=devel & nodemon --exec ts-node src/index.ts",
    "start:test": "SET NODE_ENV=test & ts-node src/index.ts",
    "test": "SET NODE_ENV=test & jest ",
    "gen-schema-types": "gql2ts src/schema.graphql -o src/types/schema.d.ts"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
